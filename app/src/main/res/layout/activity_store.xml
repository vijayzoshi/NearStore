                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"

                android:src="@drawable/dmartt"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
