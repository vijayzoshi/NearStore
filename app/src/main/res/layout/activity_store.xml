                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@+id/tv_storename"
                app:layout_constraintTop_toBottomOf="@+id/tv_storename"                android:fontFamily="@font/plusjakartasansregular"
                android:text="Dwarka"
                android:textColor="#090909"
                android:textSize="12sp"
     />

            <ImageView
                android:id="@+id/iv_storetiming"
                android:layout_width="14dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/iv_storeimage"
                app:layout_constraintTop_toBottomOf="@+id/iv_storeimage"
                app:srcCompat="@drawable/cloc" />

            <TextView
                android:id="@+id/tv_storetiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/plusjakartasansbold"
                android:text="10;00 am - 11:00 pm"
                android:textColor="@color/darkgreen"
                android:textSize="13sp"

                app:layout_constraintBottom_toBottomOf="@+id/iv_storetiming"
                app:layout_constraintStart_toEndOf="@+id/iv_storetiming"
                app:layout_constraintTop_toTopOf="@+id/iv_storetiming"
               />
            <ImageView
                android:id="@+id/iv_energy"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:src="@drawable/energy"
                app:layout_constraintBottom_toBottomOf="@+id/tv_deliverytime"
                app:layout_constraintEnd_toStartOf="@+id/tv_deliverytime"
                app:layout_constraintTop_toTopOf="@+id/tv_deliverytime" />

            <TextView

                android:id="@+id/tv_deliverytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:gravity="end"

                android:fontFamily="@font/plusjakartasansextrabold"
                android:text="30 mins"
                android:textColor="@color/darkgreen"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_storetiming"
                app:layout_constraintEnd_toEndOf="parent"
               />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_storename"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_storename">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_ratings"
                    app:layout_constraintEnd_toStartOf="@+id/tv_ratings"
                    app:layout_constraintTop_toTopOf="@+id/tv_ratings"
