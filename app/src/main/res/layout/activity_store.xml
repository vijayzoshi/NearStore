                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/plusjakartasansbold"

                android:text="D Mart"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
