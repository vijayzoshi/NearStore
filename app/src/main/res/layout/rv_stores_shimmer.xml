<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:backgroundTint="@color/shimmer_color"
        app:contentPaddingTop="20dp"
        app:contentPaddingBottom="20dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/shopimageid"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"

                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_image_24" />


            <TextView
                android:id="@+id/tv_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="invisible"

                android:fontFamily="@font/plusjakartasansextrabold"
                android:text="Rajmandir Hypermarket"
                android:textColor="#272727"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/shopimageid"
                app:layout_constraintTop_toTopOf="@+id/shopimageid" />

            <TextView
                android:id="@+id/tv_storedistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="23 km"
                android:textColor="#272727"
                android:textSize="14sp"
                android:visibility="invisible"

                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />


            <TextView
                android:id="@+id/tv_storelocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"

                android:layout_marginTop="10dp"

                android:layout_weight="1"
                android:fontFamily="@font/plusjakartasansregular"
                android:text="Dwarka sector 3"

                android:textColor="#555454"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_storename"
                app:layout_constraintTop_toBottomOf="@+id/tv_storename" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:visibility="invisible"

                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_storelocation"
                app:layout_constraintStart_toEndOf="@+id/tv_storelocation"
                app:layout_constraintTop_toTopOf="@+id/tv_storelocation" />

            <ImageView
                android:id="@+id/iv_energy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="invisible"

                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:src="@drawable/energy"
                app:layout_constraintBottom_toBottomOf="@+id/tv_storelocation"
                app:layout_constraintEnd_toStartOf="@+id/tv_deliverytime"
                app:layout_constraintTop_toTopOf="@+id/tv_storelocation" />

            <TextView

                android:id="@+id/tv_deliverytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:gravity="end"
                android:visibility="invisible"

                android:fontFamily="@font/plusjakartasansextrabold"
                android:text="30 mins"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_storedistance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_storedistance" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:visibility="invisible"

                android:orientation="horizontal" app:layout_constraintBottom_toBottomOf="@+id/tv_storename"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_storename">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_ratings"
                    app:layout_constraintEnd_toStartOf="@+id/tv_ratings"
                    app:layout_constraintTop_toTopOf="@+id/tv_ratings"
                    app:srcCompat="@drawable/baseline_star_24" />


                <TextView
                    android:id="@+id/tv_shoprating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.4"
                    android:layout_gravity="center_vertical"

                    android:fontFamily="@font/plusjakartasansextrabold"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_designation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_expertname" />


            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
