<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="120dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Background Box with Curve -->
        <View
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_gravity="center"

            android:background="@drawable/bg_productimage" />

        <!-- Image Icon Centered -->
        <ImageView
            android:id="@+id/iv_productimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pampp" />
    </FrameLayout>



    <TextView
        android:id="@+id/tv_productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/plusjakartasansbold"
        android:text="Pampers"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/fl_image"
        app:layout_constraintTop_toBottomOf="@id/fl_image" />

    <TextView
        android:id="@+id/tv_productquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="10sp"
        android:text="1 pack"
        app:layout_constraintStart_toStartOf="@+id/tv_productname"
        app:layout_constraintTop_toBottomOf="@+id/tv_productname" />

    <TextView
        android:id="@+id/tv_productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/plusjakartasansbold"
        android:text="â‚¹250"
        android:textColor="@color/black"
        android:textSize="12sp"

        app:layout_constraintStart_toStartOf="@+id/tv_productquantity"
        app:layout_constraintTop_toBottomOf="@+id/tv_productquantity" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="62dp"
        android:layout_height="34dp"
        android:backgroundTint="@color/darkgreen"
        android:padding="0dp"
        android:layout_marginEnd="5dp"
        android:text="Add"
        app:cornerRadius="4dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fl_image"
        app:layout_constraintEnd_toEndOf="@+id/fl_image" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_marginEnd="5dp"

        android:layout_width="60dp"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_productll"
        app:layout_constraintBottom_toBottomOf="@+id/fl_image"
        app:layout_constraintEnd_toEndOf="@+id/fl_image"
        >

        <ImageButton
            android:id="@+id/iv_minus"
            android:padding="0dp"

            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_indeterminate_check_box_24"
            />

        <TextView
            android:id="@+id/tv_productnumber"

            android:textColor="@color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            />
        <ImageButton
            android:id="@+id/iv_plus"

            android:backgroundTint="@color/white"


            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_box_24" />





    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>